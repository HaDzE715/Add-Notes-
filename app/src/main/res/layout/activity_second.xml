<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SecondActivity"
    android:background="@drawable/notesbackground">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>


    <ImageView
        android:id="@+id/Profile_Pic"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/me"/>
    <ImageView
        android:id="@+id/rounded_frame"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rounded_circle"/>

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/ageo"
        android:text="Hello"
        android:textSize="35dp"
        android:textColor="#FBFBFB"/>
    <TextView
        android:id="@+id/firstname_welcome"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/ageo"
        android:text=""
        android:textSize="35dp"
        android:textColor="#FBFBFB"/>
    <TextView
        android:id="@+id/last_login"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="120dp"
        android:text="Last logged in: 27/11/2023."
        android:textColor="#FBFBFB"/>
    <TextView
        android:id="@+id/notes"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Your notes:"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/ageo"
        android:textColor="#FBFBFB"/>

    <ImageButton
        android:id="@+id/AddNote"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:background="?android:selectableItemBackground"
        android:layout_marginTop="298dp"
        android:layout_marginLeft="355dp"
        android:clickable="true"/>

<!--    <TextView-->
<!--        android:id="@+id/NoteBox"-->
<!--        android:layout_width="410dp"-->
<!--        android:layout_height="100dp"-->
<!--        android:gravity="center"-->
<!--        android:layout_marginTop="350dp"/>-->



</RelativeLayout>